@model MvcMovie.Models.AutoMarcaViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

  <form asp-controller="Autos" asp-action="Index" method="get">
    <p>
         <select asp-for="AutoMarca" asp-items="Model.Marcas">
            <option value="">All</option>
        </select>
        Marca: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Autos[0].Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autos[0].AñoDelModelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autos[0].Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autos[0].PrecioTotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Autos) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AñoDelModelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioTotal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
